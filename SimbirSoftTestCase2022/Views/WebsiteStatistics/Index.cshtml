@model IEnumerable<SimbirSoftTestCase2022.Models.WordViewModel>
@{
    ViewData["Title"] = "Статистика по сайту";
}

<form asp-controller="WebsiteStatistics" asp-action="Index" method="get">
    <p>
        Сайт: <input type="text" size=50 value="https://www.simbirsoft.com/" name="SearchString" />
        <input type="submit" value="Загрузить" />
    </p>

    <p>
        @ViewData["totalCountWords"]
    </p>

    <p>
        @ViewData["mostFrequentWord"]
    </p>

     <p>
        @ViewData["measureText"]
    </p>

</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Count)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Count)
            </td>
        </tr>
}
    </tbody>
</table>